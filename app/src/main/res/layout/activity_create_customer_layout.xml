<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_create_pm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/size_16dp"
    android:paddingRight="@dimen/size_16dp"
    android:paddingBottom="@dimen/size_18dp">

    <com.moneycollect.android.ui.view.MoneyCollectContentView
        android:id="@+id/create_pm_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/result_tag"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/size_17dp"
                android:layout_marginRight="@dimen/size_17dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>

